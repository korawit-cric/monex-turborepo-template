{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:staging:up": "docker-compose -f docker-compose.staging.yml up",
    "docker:staging:down": "docker-compose -f docker-compose.staging.yml down",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "setup-env": "node ./setup-env.js apps/backend/.env.sample apps/backend/.env",
    "setup-db": "cd apps/backend && npx mikro-orm migration:up",
    "prepare": "husky install",
    "clean-node": "rm -rf node_modules package-lock.json && find apps packages -type d -name 'node_modules' -exec rm -rf {} + && find apps packages -type f -name 'package-lock.json' -delete"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@svgr/webpack": "^8.1.0",
    "husky": "^8.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "monex-turborepo-template",
  "packageManager": "npm@10.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
