{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~/assets/*": [
        "./public/assets/*"
      ]
    }
  },
  "include": [
    ".eslintrc.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}